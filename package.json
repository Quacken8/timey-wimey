{
  "name": "timey-wimey-tracker",
  "displayName": "Timey Wimey",
  "description": "Extension that keeps track of time spent coding per user per project",
  "icon": "assets/clock-melting.png",
  "publisher": "Quacken",
  "version": "0.2.0",
  "keywords": [
    "simple",
    "free",
    "time",
    "tracker",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "view/item/context": [
        {
          "command": "timeyWimey.helloWorld",
          "when": "view == timeyWimey"
        }
      ]
    },
    "commands": [
      {
        "command": "timeyWimey.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Timey Wimey",
      "properties": {
        "timeyWimey.moveDBOnFileChange": {
          "type": "boolean",
          "default": true,
          "description": "Move data from the old database to the new one when the database file changes"
        },
        "timeyWimey.writeInterval": {
          "type": "number",
          "default": 5,
          "description": "Interval in minutes to write to the database"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "rebuild-sqlite": "pnpm electron-rebuild -f -w better-sqlite3 -v 27.2.3",
    "migrate": "tsx .drizzle/migrator.ts"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.29.3",
    "gitlog": "^4.0.8",
    "isoWeek": "link:dayjs/plugin/isoWeek",
    "libchartium": "^0.0.31",
    "sqlocal": "^0.7.1",
    "ts-pattern": "^5.0.8",
    "tsx": "^4.7.1"
  }
}
