{
  "name": "timeyboogaloo",
  "displayName": "timeyBoogaloo",
  "description": "Actually good coding time tracker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "timeyboogaloo.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "TimeyBoogaloo",
      "properties": {
        "timeyboogaloo.databasePath": {
          "type": "string",
          "default": "~/.vscode/timeyBoogaloo",
          "description": "Path to the database folder"
        },
        "timeyboogaloo.moveDBOnFileChange": {
          "type": "boolean",
          "default": true,
          "description": "Move data from the old database to the new one when the database file changes"
        },
        "timeyBoogaloo.writeInterval": {
          "type": "number",
          "default": 5,
          "description": "Interval in minutes to write to the database"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "rebuild-sqlite": "pnpm electron-rebuild -f -w better-sqlite3 -v 27.2.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.29.3",
    "libchartium": "^0.0.31",
    "simple-git": "^3.22.0",
    "sqlocal": "^0.7.1",
    "ts-pattern": "^5.0.8"
  }
}
