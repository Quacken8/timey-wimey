{
  "name": "timey-wimey-tracker",
  "displayName": "Timey Wimey",
  "description": "Extension that keeps track of time spent coding per user per project",
  "icon": "assets/clock-melting.png",
  "publisher": "Quacken",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quacken8/timey-wimey"
  },
  "keywords": [
    "simple",
    "free",
    "time",
    "tracker"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "timeyWimey.openDB",
        "title": "Timey Wimey: Open the database"
      },
      {
        "command": "timeyWimey.showStats",
        "title": "Timey Wimey: Show interactive statistics of your work"
      }
    ],
    "configuration": {
      "title": "Timey Wimey",
      "properties": {
        "timeyWimey.moveDBOnFileChange": {
          "type": "boolean",
          "default": true,
          "description": "Move data from the old database to the new one when the database file changes"
        },
        "timeyWimey.writeInterval": {
          "type": "number",
          "default": 5,
          "description": "How often to write to the database in minutes"
        },
        "timeyWimey.dbCommand": {
          "type": "string",
          "default": "sqlite3",
          "description": "What command to use to talk to the database. For info on format refer to the extension README.md"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "npm run build-frontend && esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "npm run build-frontend && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "migrate": "tsx .drizzle/migrator.ts",
    "build-frontend": "cd ../frontend && pnpm build && cd ../extension"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.20.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "gitlog": "^4.0.8",
    "ts-pattern": "^5.1.2"
  }
}
